                      <form action="/inscription" method="POST" class="sm:p-8 p-4 w-full">
                        <div class="mb-12">
                          <h3 class="text-green-800 text-3xl font-extrabold max-md:text-center">Inscription</h3>
                        </div>
              
                        <div class="grid lg:grid-cols-2 gap-6">
                          <div>
                            <label class="text-gray-800 text-sm mb-2 block">Prénom (s)</label>
                            <input name="prenom" type="text" class="bg-gray-100 w-full text-gray-800 text-sm px-4 py-3 rounded-md outline-green-500" placeholder="Entrer votre (vos) prénom (s)" />
                          </div>
                          <div>
                            <label class="text-gray-800 text-sm mb-2 block">Nom</label>
                            <input name="nom" type="text" class="bg-gray-100 w-full text-gray-800 text-sm px-4 py-3 rounded-md outline-green-500" placeholder="Entrer votre nom" />
                          </div>
                          <div>
                            <label class="text-gray-800 text-sm mb-2 block">Email</label>
                            <input name="email" type="text" class="bg-gray-100 w-full text-gray-800 text-sm px-4 py-3 rounded-md outline-green-500" placeholder="Entrer votre e-mail" />
                          </div>
                          <div>
                            <label class="text-gray-800 text-sm mb-2 block">Contact</label>
                            <input name="contact" type="text" class="bg-gray-100 w-full text-gray-800 text-sm px-4 py-3 rounded-md outline-green-500" placeholder="Entrer votre contact" />
                          </div>
                          <div>
                            <label class="text-gray-800 text-sm mb-2 block">Matricule</label>
                            <input name="mat" type="text" class="bg-gray-100 w-full text-gray-800 text-sm px-4 py-3 rounded-md outline-green-500" placeholder="Entrer votre e-mail" />
                          </div>
                          <div>
                            <label class="text-gray-800 text-sm mb-2 block">U.G.F</label>
                            <input name="ugf" type="text" class="bg-gray-100 w-full text-gray-800 text-sm px-4 py-3 rounded-md outline-green-500" placeholder="Entrer votre contact" />
                          </div>
                          <div>
                            <label class="text-gray-800 text-sm mb-2 block">Mot de pass</label>
                            <input name="mp" type="password" class="bg-gray-100 w-full text-gray-800 text-sm px-4 py-3 rounded-md outline-green-500" placeholder="Entrer votre mot de pass" />
                          </div>
                          <div>
                            <label class="text-gray-800 text-sm mb-2 block">Confirmer mot de pass</label>
                            <input name="rp_mp" type="password" class="bg-gray-100 w-full text-gray-800 text-sm px-4 py-3 rounded-md outline-green-500" placeholder="Confirmer votre mot de pass" />
                          </div>
                        
              
                        <div class="flex items-center mt-6">
                          <label for="remember-me" class="ml-3 block text-sm">
