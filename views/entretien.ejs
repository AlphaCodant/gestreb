    <script>
      document.addEventListener('DOMContentLoaded', async () => {
        try {
          const response = await fetch('/get/parcelles/entretien/<%=annee%>/<%=foret%>');
          const travail = await response.json();
          const liste_travaux = [];
          let t1=0;
          let t2=0;
          const liste_passage=[];
          travail.forEach(trv => {
           const t = {travail:trv.fk_cout_fixe, objectif:trv.superficie, realise:trv.superficie_traitee, taux:trv.superficie_traitee/trv.superficie*100, reliquat:trv.superficie-trv.superficie_traitee};
            liste_travaux.push(t);
            console.log(liste_travaux);
            if(trv.fk_cout_fixe==8 || trv.fk_cout_fixe==9 || trv.fk_cout_fixe==10||
             trv.fk_cout_fixe==11){
              if(trv.fk_cout_fixe==10){
              t1=t1+(t.realise/(t.objectif/5)*100);
              document.getElementById(`p${trv.fk_cout_fixe}-1`).textContent = `Objectif : ${(Math.round(t.objectif/5 * 100)/100).toFixed(2)} ha`;
              document.getElementById(`p${trv.fk_cout_fixe}-2`).textContent = `Réalisé : ${(Math.round(t.realise * 100)/100).toFixed(2)} ha`;
              document.getElementById(`p${trv.fk_cout_fixe}-3`).textContent = `Taux : ${(Math.round(t.realise/(t.objectif/5)*100 * 100)/100).toFixed(2)} %`;
              document.getElementById(`p${trv.fk_cout_fixe}-4`).textContent = `Réliquat : ${(Math.round((t.objectif/5-t.realise) * 100)/100).toFixed(2)} ha`; 
              }else{
              t1=t1+t.taux;
              document.getElementById(`p${trv.fk_cout_fixe}-1`).textContent = `Objectif : ${(Math.round(t.objectif * 100)/100).toFixed(2)} ha`;
              document.getElementById(`p${trv.fk_cout_fixe}-2`).textContent = `Réalisé : ${(Math.round(t.realise * 100)/100).toFixed(2)} ha`;
              document.getElementById(`p${trv.fk_cout_fixe}-3`).textContent = `Taux : ${(Math.round(t.taux * 100)/100).toFixed(2)} %`;
              document.getElementById(`p${trv.fk_cout_fixe}-4`).textContent = `Réliquat : ${(Math.round(t.reliquat * 100)/100).toFixed(2)} ha`;
            }
            }
            if(trv.fk_cout_fixe==12 || trv.fk_cout_fixe==13){
              t2=t2+t.taux;
              document.getElementById(`p${trv.fk_cout_fixe}-1`).textContent = `Objectif : ${(Math.round(t.objectif * 100)/100).toFixed(2)} ha`;
              document.getElementById(`p${trv.fk_cout_fixe}-2`).textContent = `Réalisé : ${(Math.round(t.realise * 100)/100).toFixed(2)} ha`;
              document.getElementById(`p${trv.fk_cout_fixe}-3`).textContent = `Taux : ${(Math.round(t.taux * 100)/100).toFixed(2)} %`;
              document.getElementById(`p${trv.fk_cout_fixe}-4`).textContent = `Réliquat : ${(Math.round(t.reliquat * 100)/100).toFixed(2)} ha`;
            }
            });
            liste_passage.push(t1);
            liste_passage.push(t2);
            console.log(liste_passage);
            
            document.getElementById(`op1`).textContent = `OBJECTIF : ${(Math.round(liste_travaux[7].objectif * 100)/100).toFixed(2)} ha`;
            document.getElementById(`tp1`).textContent = `TAUX DE REALISATION: ${(Math.round(liste_passage[0]/4 * 100)/100).toFixed(2)} %`;
            document.getElementById(`op2`).textContent = `OBJECTIF : ${(Math.round(liste_travaux[11].objectif * 100)/100).toFixed(2)} ha`;
            document.getElementById(`tp2`).textContent = `TAUX DE REALISATION: ${(Math.round(liste_passage[1]/2 * 100)/100).toFixed(2)} %`;
        } catch (error) {
          console.error('Erreur lors de la récupération des parcelles:', error);
        }
      });
